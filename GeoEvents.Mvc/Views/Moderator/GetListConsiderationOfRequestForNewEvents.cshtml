@using GeoEvents.Application.ConsideredGeoEvents.Queries.GetGeoEventList
@model ConsideredGeoEventListVm

<div class="container">
    <div>
        <h1>Список предложенных событий</h1>
    </div>
    <table class="table">
        @foreach (var geoEvent in Model.GeoEvents)
        {
            <tr>
                <td>@geoEvent.Title</td>
                <td>
                    <form class="form-inline">
                        <button asp-action="DeleteConsideredEvent" asp-route-id="@geoEvent.Id" type="submit" class="btn btn-sm btn-danger" formmethod="post">
                            Удалить
                        </button>
                        <button asp-action="CreateCheckedEventFromConsidered" asp-route-id="@geoEvent.Id" type="submit" class="btn btn-sm btn-danger" formmethod="post">
                            Создать
                        </button>
                        <button asp-action="EditConsideredEvent" asp-route-id="@geoEvent.Id" type="submit" class="btn btn-sm btn-danger" formmethod="get">
                            Редактирование
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>   
</div>