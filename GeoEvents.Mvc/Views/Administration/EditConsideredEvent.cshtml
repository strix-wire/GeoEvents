@model EditConsideredGeoEventDetails

<div class="container">
    <div>
        <h1>Редактирование предложенного события: @Model.Title</h1>
    </div>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <table class="table">
                <tr>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Details"></label>
                        <input asp-for="Details" class="form-control">
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Latitude"></label>
                        <input asp-for="Latitude" class="form-control">
                    </div>

                    <div class="form-group">
                        <label asp-for="Longitude"></label>
                        <input asp-for="Longitude" class="form-control">
                    </div>
                </tr>
        </table>
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>
</div>